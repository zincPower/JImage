<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jimage_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/control_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/crop"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/ic_crop_40dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/jimage_divider_line_color" />

        <ImageView
            android:id="@+id/rotate"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/ic_crop_rotate_40dp" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/control_bar"
        android:background="@color/jimage_divider_line_color" />

    <RelativeLayout
        android:id="@+id/control_rotate_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/divider"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/reset_rotate"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/j_ic_reset_40dp" />

        <ImageView
            android:id="@+id/right_angle_rotate"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:src="@drawable/ic_rotate_90_40dp" />


        <TextView
            android:id="@+id/rotate_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2.5dp"
            android:text="0.0"
            android:textColor="@color/jimage_progress_wheel_line_color"
            android:textSize="10.5dp" />

        <com.zinc.libimage.widget.HorizontalProgressWheelView
            android:id="@+id/progress_wheel_rotate"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/rotate_num"
            android:layout_toLeftOf="@id/right_angle_rotate"
            android:layout_toRightOf="@id/reset_rotate" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/control_scale_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/divider">

        <ImageView
            android:id="@+id/reset_scale"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/j_ic_reset_40dp" />

        <TextView
            android:id="@+id/scale_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2.5dp"
            android:paddingLeft="45dp"
            android:text="0.0"
            android:textColor="@color/jimage_progress_wheel_line_color"
            android:textSize="10.5dp" />

        <com.zinc.libimage.widget.HorizontalProgressWheelView
            android:id="@+id/progress_wheel_scale"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/scale_num"
            android:layout_toRightOf="@id/reset_scale" />

    </RelativeLayout>

