<?xml version="1.0" encoding="utf-8"?>
<com.zinc.libimage.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_camera"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/jimage_item_bg"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/j_ic_camera" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/camera"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/jimage_take_picture"
        android:textColor="@color/jimage_text_color" />

</com.zinc.libimage.widget.SquareRelativeLayout>